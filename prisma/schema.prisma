

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}


// =====================
// 1Ô∏è‚É£ Enums
// =====================

enum UserRole {
  STUDENT
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETION_REQUESTED
}

enum AvailabilityStatus {
  AVAILABLE
  BUSY
  AWAY
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum RequestType {
  MESSAGE
  PARTNER
}

enum RequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

// =====================
// 2Ô∏è‚É£ User (Authentication Only)
// =====================

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  role      UserRole
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now())

  student   Student?
  admin     Admin?


}

// =====================
// 3Ô∏è‚É£ Student (Profile & Academic Data)
// =====================

model Student {
  id             String           @id @default(uuid())
  userId         String           @unique
  name           String
  department     String
  currentSemester Int
  profilePicture String?
  interests      String?
  phone          String?
  linkedinUrl    String?
  githubUrl      String?
  availability   AvailabilityStatus @default(AVAILABLE)
  createdAt      DateTime         @default(now())

  user           User             @relation(fields: [userId], references: [id])

  skills         Skill[]
  projects       Project[]

  sentRequests   Request[]        @relation("SENTREQUESTS")
  receivedRequests Request[]      @relation("RECEIVEDREQUESTS")

  groupMember    FYPGroupMember?
}

// =====================
// 4Ô∏è‚É£ Admin (Separate Profile)
// =====================

model Admin {
  id      String @id @default(uuid())
  userId  String @unique
  name    String

  user    User   @relation(fields: [userId], references: [id])

 
}

// =====================
// 5Ô∏è‚É£ Skill
// =====================

model Skill {
  id          String          @id @default(uuid())
  studentId   String
  name        String
  description String?
  level       ExperienceLevel @default(BEGINNER)

  student     Student         @relation(fields: [studentId], references: [id])

  @@unique([studentId, name]) // ‚úÖ one skill name per student
}



// =====================
// 7Ô∏è‚É£ Project (Personal Projects)
// =====================

model Project {
  id         String   @id @default(uuid())
  studentId  String
  name       String
  description String?
  liveLink   String?
  githubLink String?

  student    Student  @relation(fields: [studentId], references: [id])
}

// =====================
// 8Ô∏è‚É£ Request (Message + Partner Requests)
// =====================

model Request {
  id            String      @id @default(uuid())
  fromStudentId String
  toStudentId   String
  type          RequestType
  reason        String
  status        RequestStatus @default(PENDING)
  createdAt     DateTime      @default(now())

  fromStudent   Student      @relation("SENTREQUESTS", fields: [fromStudentId], references: [id])
  toStudent     Student      @relation("RECEIVEDREQUESTS", fields: [toStudentId], references: [id])

  // üìå Messaging rule:
  // If status = ACCEPTED ‚Üí messaging allowed
}

// =====================
// 9Ô∏è‚É£ FYP Group
// =====================

model FYPGroup {
  id          String            @id @default(uuid())
  projectName String
  description String?
  isLocked    Boolean           @default(false)
  createdAt   DateTime          @default(now())

  members     FYPGroupMember[]
}

// =====================
// 10Ô∏è‚É£ FYP Group Member
// =====================

model FYPGroupMember {
  id        String   @id @default(uuid())
  groupId   String
  studentId String
  joinedAt  DateTime @default(now())

  group     FYPGroup @relation(fields: [groupId], references: [id])
  student   Student  @relation(fields: [studentId], references: [id])

  @@unique([studentId])
  // üìå Enforces:
  // A student can only be in one group at a time
}


